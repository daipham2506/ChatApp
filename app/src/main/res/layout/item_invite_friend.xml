<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_invite_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder_user" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/rl_photo"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/item_invite_name"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Laura Owens Laura Owens"
                    android:textSize="18sp"/>

                <TextView
                    android:fontFamily="@font/quicksand_medium"
                    android:id="@+id/item_invite_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="\@laura"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <Button
                        android:fontFamily="@font/quicksand_bold"
                        android:id="@+id/item_invite_accept"
                        android:layout_marginRight="5dp"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Chấp nhận"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:background="#078CF7"
                        />
                    <Button
                        android:fontFamily="@font/quicksand_bold"
                        android:id="@+id/item_invite_cancel"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Xóa"
                        android:textAllCaps="false"
                        android:background="#E4E4E1"
                        />
                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>